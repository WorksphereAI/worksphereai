  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run deploy",
    "preview": "cd frontend && npm run preview",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup": "npm run install:all && npm run setup:db",
    "setup:db": "cd database && node setup.js",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npm run test",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/node_modules node_modules",
    "deploy:prod": "npm run build && npm run deploy:backend"
  },

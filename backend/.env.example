# Backend Environment Variables
# This file should NOT be committed to git
# Copy this to .env and fill in your actual values

# Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Email Service (Resend) - SERVER-SIDE ONLY
# IMPORTANT: Keep this in backend only, NEVER expose to frontend
# Get your key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Optional: Custom from email for emails
# If not set, defaults to noreply@worksphere.ai
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# AI Services
OPENAI_API_KEY=sk-your-openai-key-here

# Optionally set other providers
# REPLICATE_API_TOKEN=your-token-here
# ANTHROPIC_API_KEY=your-key-here

# Feature Flags
ENABLE_EMAIL_SERVICE=true
ENABLE_AI_FEATURES=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
